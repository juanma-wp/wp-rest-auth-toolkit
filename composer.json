{
  "name": "wp-rest-auth/auth-toolkit",
  "description": "Shared authentication utilities for WordPress REST API - JWT, OAuth2, and refresh token management",
  "type": "library",
  "keywords": [
    "wordpress",
    "jwt",
    "oauth2",
    "authentication",
    "rest-api",
    "security",
    "refresh-tokens",
    "pkce",
    "cors"
  ],
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "WordPress Developer",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.12"
  },
  "autoload": {
    "psr-4": {
      "WPRestAuth\\AuthToolkit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPRestAuth\\AuthToolkit\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse --memory-limit=512M",
    "lint": "phpcs",
    "lint-fix": "phpcbf"
  },
  "config": {
    "platform": {
      "php": "7.4.0"
    }
  }
}
